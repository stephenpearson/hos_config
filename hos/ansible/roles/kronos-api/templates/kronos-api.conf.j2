[DEFAULT]
# logging, make sure that the user under whom the server runs has permission
# to write to the directory.
log_file = {{ kronos_api_log_file }}
log_dir = {{ kronos_log_dir }}
debug = {{ kronos_api_debug }}

# Dispatchers to be loaded to serve restful APIs
[dispatcher]
logs = {{ kronos_api_dispatcher_logs }}
versions = {{ kronos_api_dispatcher_versions }}
driver = {{ kronos_api_dispatcher_driver }}

[service]
region = {{ kronos_api_service_region }}

[log_publisher]
topics = {{ kronos_kafka_topic }}
kafka_url = {{ kronos_kafka_hosts }}

[keystone_authtoken]
admin_user = {{ kronos_keystone_user }}
admin_password = {{ kronos_keystone_password }}
admin_tenant_name = {{ kronos_keystone_project }}
identity_uri = {{ kronos_keystone_identity_uri }}
auth_uri = {{ kronos_keystone_auth_uri }}
cafile = {{ kronos_api_keystone_authtoken_cafile }}
certfile = {{ kronos_api_keystone_authtoken_certfile }}
keyfile = {{ kronos_api_keystone_authtoken_keyfile }}
insecure = {{ kronos_api_keystone_authtoken_insecure }}


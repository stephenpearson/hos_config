[Unit]
SourcePath=/etc/init.d/elasticsearch
Description=LSB: Starts elasticsearch
Before=runlevel2.target runlevel3.target runlevel4.target runlevel5.target shutdown.target logstash.service kibana.service
After=network-online.target remote-fs.target nss-lookup.target
Wants=network-online.target logstash.service kibana.service
Conflicts=shutdown.target

[Service]
Type=forking
PIDFile=/var/run/elasticsearch.pid
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
SysVStartPriority=1
ExecStart=/etc/init.d/elasticsearch start
ExecStop=/etc/init.d/elasticsearch stop

[Install]
WantedBy=multi-user.target

[DEFAULT]
verbose = {{ verbose }}
debug = {{ debug }}
log_config_append = {{ log_config_append }}
rpc_backend = {{ rpc_backend }}
rpc_conn_pool_size = {{ rpc_conn_pool_size }}
enabled_drivers= {{ enabled_drivers }}
rootwrap_config = {{ rootwrap_config_append }}

[oslo_policy]
policy_file = {{ policy_file }}

[oslo_messaging_rabbit]
rabbit_userid = {{ rabbit_userid }}
rabbit_password = {{ rabbit_password }}
rabbit_hosts = {{ rabbit_hosts }}

[api]
public_endpoint = {{ api_url }}
host_ip = {{ host_ip }}
port = {{ port }}

[database]
connection = {{ connection }}

[keystone_authtoken]
admin_user = {{ admin_user }}
admin_password = {{ admin_password }}
admin_tenant_name = {{ admin_tenant_name }}
auth_uri = {{ auth_uri }}
identity_uri = {{ identity_uri }}
auth_version = {{ auth_version }}

[glance]
glance_host = {{ glance_host }}
glance_port = {{ glance_port }}
glance_protocol = {{ glance_protocol }}
swift_temp_url_key = {{ ironic_swift_temp_url_key }}
swift_endpoint_url = {{ swift_internal_endpoint }}
swift_api_version = {{ swift_api_version_result.stdout }}
swift_account = {{ swift_account_result.stdout }}
swift_container = {{ swift_container }}

[neutron]
url = {{ url }}
cleaning_network_uuid = {{ cleaning_network_uuid }}

[pxe]
tftp_server = {{ tftp_server }}
images_path = {{ ironic_images_path }}
instance_master_path = {{ instance_master_path }}
pxe_append_params = {{ pxe_append_params }}
ipxe_enabled = {{ ipxe_enabled }}
pxe_config_template = {{ pxe_config_template }}
pxe_bootfile_name = {{ pxe_bootfile_name }}
uefi_pxe_config_template = {{ uefi_pxe_config_template }}
uefi_pxe_bootfile_name = {{ uefi_pxe_bootfile_name }}
ipxe_boot_script = {{ ipxe_boot_script }}

[deploy]
http_root = {{ http_root }}
http_url = {{ http_url }}

[conductor]
api_url = {{ api_url }}
clean_nodes = {{ automated_clean }}

[ilo]
power_retry = {{ ilo_power_retry }}
power_wait = {{ ilo_power_wait }}

[ipmi]
retry_timeout = {{ ipmi_retry_timeout  }}
min_command_interval = {{ ipmi_min_command_interval  }}

[swift]
swift_user_name = {{ glance_swift_user }}
swift_user_password = {{ glance_swift_password }}
swift_user_tenant_name = {{ glance_swift_tenant }}
swift_endpoint_url = {{ swift_internal_endpoint }}
swift_api_version = {{ swift_api_version_result.stdout }}
swift_account = {{ swift_account_result.stdout }}

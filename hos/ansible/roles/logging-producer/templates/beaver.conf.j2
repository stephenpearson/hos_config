[beaver]
sincedb_path = /var/log/beaver/since.db
logstash_version = 1
transport = {{beaver_transport}}
queue_timeout={{beaver_queue_timeout_secs}}
max_queue_size={{beaver_max_queue_size}}
number_of_consumer_processes={{beaver_number_of_consumer_processes}}

# kafka transport settings
kafka_topic={{kronos_kafka_topic}}
kafka_hosts={{kronos_kafka_hosts}}
kafka_queue_maxsize={{kronos_kafka_queue_maxsize}}
kafka_queue_put_timeout={{kronos_kafka_queue_put_timeout}}

# monascalog transport settings
monascalog_auth_url={{kronos_keystone_auth_uri}}/v3
monascalog_hosts={{kronos_monascalog_api_hosts}}
monascalog_user_name={{kronos_keystone_user}}
monascalog_password={{kronos_keystone_password}}
monascalog_project_name={{kronos_keystone_project}}
monascalog_domain_name={{kronos_keystone_domain}}
monascalog_max_retries={{beaver_max_retries}}
